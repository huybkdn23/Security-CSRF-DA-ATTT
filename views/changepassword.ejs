<style>
    .right-menu{
        line-height: 12px;
        font-size: 20px;
        margin-top: 10px;
        margin-right: 10px;
        position: absolute;
        top: 0;
        right: 0;
    }
     .right-menu a{
        line-height: 12px;
        font-size: 20px;
    }
</style>
</head>
<body>
    
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
				<form class="login100-form validate-form" method="POST" action="/api/users/<%=user._id%>">
					<input type="hidden" name="_csrf" value="<%=csurfToken%>" id="_csrf">
					<span class="login100-form-title p-b-33">
						Change Password <span id="username"></span>
                    </span>
                    <input type="hidden" id="user_id">

					<div class="wrap-input100 validate-input">
                        <label for="current_balance">New password:</label>
						<input class="input100" type="password" name="new_password" id="new_password">
						<span class="focus-input100-1"></span>
						<span class="focus-input100-2"></span>
					</div>

					<div class="wrap-input100 rs1 validate-input">
                        <label for="balance">Confirm new password:</label>
						<input class="input100" type="password" name="confirm_new_password" id="confirm_new_password">
						<span class="focus-input100-1"></span>
						<span class="focus-input100-2"></span>
					</div>

					<div class="container-login100-form-btn m-t-20">
						<input type="submit" name="submit" class="login100-form-btn" id="submit-btn" value="Submit">
					</div>
				</form>
			</div>
            <div class="right-menu">
                <a href="http://localhost:8000/transfer">Transfer</a> | 
                <a href="http://localhost:8000/balances">Update Balances</a> | 
                <a href="http://localhost:8000/list">List</a> | 
                <button id="logout-btn">Logout</button>
            </div>
		</div>
	</div>
	

	
<!--===============================================================================================-->
	<script src="vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="vendor/animsition/js/animsition.min.js"></script>
<!--===============================================================================================-->
	<script src="vendor/bootstrap/js/popper.js"></script>
	<script src="vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="vendor/daterangepicker/moment.min.js"></script>
	<script src="vendor/daterangepicker/daterangepicker.js"></script>
<!--===============================================================================================-->
	<script src="vendor/countdowntime/countdowntime.js"></script>
<!--===============================================================================================-->
	<script src="js/changepassword.js"></script>

</body>
</html>